{
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["react/next", "react-dom/next"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  }
}

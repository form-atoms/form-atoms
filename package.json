{
  "name": "form-atoms",
  "version": "1.2.2",
  "description": "Form primitives for Jotai",
  "license": "MIT",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredlunde.com/)",
  "homepage": "https://github.com/jaredLunde/form-atoms#readme",
  "repository": "github:jaredLunde/form-atoms",
  "bugs": "https://github.com/jaredLunde/form-atoms/issues",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "files": [
    "/dist",
    "/src",
    "/types"
  ],
  "scripts": {
    "build": "lundle build",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,tsx,js,jsx,md,yml,json}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install",
    "test": "jest",
    "validate": "lundle check-types && pnpm run lint && jest --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "types": "types/index.d.ts",
  "peerDependencies": {
    "jotai": "^1.5.3",
    "react": ">=16.8"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@swc-node/core": "^1.6.0",
    "@swc-node/jest": "^1.3.2",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@testing-library/react-hooks": "latest",
    "@testing-library/user-event": "latest",
    "@types/jest": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "cz-conventional-changelog": "latest",
    "eslint": "^7.32.0",
    "eslint-config-lunde": "latest",
    "husky": "latest",
    "jest": "latest",
    "jotai": "^1.6.0",
    "lint-staged": "latest",
    "lundle": "latest",
    "prettier": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-test-renderer": "latest",
    "typescript": "latest"
  },
  "keywords": [
    "atomic form",
    "form atoms",
    "form hooks",
    "jotai",
    "jotai form",
    "jotai form atoms",
    "jotai forms",
    "react",
    "react form",
    "react form library",
    "react hook",
    "react hook form"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "/types",
    "test",
    "*.config.js"
  ],
  "exports": {
    ".": {
      "browser": "./dist/module/index.js",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "umd": "./dist/umd/form-atoms.js",
      "source": "./src/index.tsx",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./package.json": "./package.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc-node/jest",
        {
          "react": {
            "runtime": "automatic",
            "development": false,
            "useBuiltins": true
          }
        }
      ]
    }
  },
  "lint-staged": {
    "package.json": [
      "pnpx -y prettier-package-json --write"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --ext .ts,.tsx,.js,.jsx --fix",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "types",
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "source": "src/index.tsx",
  "unpkg": "dist/umd/form-atoms.js"
}
